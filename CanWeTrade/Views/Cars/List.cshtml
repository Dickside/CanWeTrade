@{
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=deviced-width">
    <title>List</title>
</head>
<body>
    <h1>Все автомобили</h1>
    <h3>@ViewBag.Category</h3>
    @{
        foreach (var car in Model)
        {
            <div>
                <h3>Модель: @car.name </h3>
                <p>Цена: @car.price.ToString("c")</p>
            </div>
        }
    }
</body>
</html>